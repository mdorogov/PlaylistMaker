<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_0</item>
        <item name="android:layout_marginHorizontal">@dimen/frame_padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ic_padding_8</item>
        <item name="iconSize">@dimen/ic_size_24</item>
        <item name="iconTint">@color/black</item>
    </style>
    
    <style name="CreatePlaylistButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>

        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/gray</item>

        <item name="android:lineHeight">18.75dp</item>
    </style>

    <style name="CreatePlaylistHintStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>

    </style>

    <style name="FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/frame_padding_16</item>
        <item name="android:paddingVertical">@dimen/frame_padding_20</item>
    </style>

    <style name="SettingsView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">@color/blue_cursor_color</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/blue_cursor_color</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

    </style>



    <style name="SettingsIcon">
        <item name="android:layout_height">@dimen/ic_size_24</item>
        <item name="android:layout_width">@dimen/ic_size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="SettingsIconNoColorChange">
        <item name="android:layout_height">@dimen/ic_size_24</item>
        <item name="android:layout_width">@dimen/ic_size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="ActivityText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="iconSize">@dimen/ic_size_24</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchHint" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ArtistDurationTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="PlaylistSheetView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">11dp</item>

    </style>

    <style name="ArtistTrackViw">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/test_text_0_00</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="ChosenTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_18</item>
        <item name="android:layout_marginEnd">@dimen/padding_10dp</item>
    </style>

    <style name="UpdateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/update_btn_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/padding_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TrackPlayerTextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ArtistPlayerTextView">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="DescriptionPlayerTextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DescriptionPlayerText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>



    <style name="TabStyler">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextAppearanceTab</item>
    </style>

    <style name="TextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="TextAppearanceBottomNav" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textFontWeight">400</item>

</style>

    <style name="NavigationTheme" parent="Widget.Design.BottomNavigationView" >
        <item name="itemTextAppearanceActive">@style/TextAppearanceBottomNav</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearanceBottomNav</item>
        <item name="itemIconTint">@drawable/color_selector</item>
        <item name="itemTextColor">@drawable/color_selector</item>
        <item name="itemBackground">?attr/colorSecondary</item>

    </style>

    <style name="PlaylistFragmentName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="PlaylistFragmentText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">400</item>
    </style>





    <dimen name="text_size_14">14sp</dimen>
    <dimen name="padding_18">18dp</dimen>
    <dimen name="text_size12">12sp</dimen>
    <dimen name="text_size_24">24sp</dimen>
    <dimen name="text_size_18">18sp</dimen>
</resources>