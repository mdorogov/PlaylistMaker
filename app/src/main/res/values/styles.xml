<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_0</item>
        <item name="android:layout_marginHorizontal">@dimen/frame_padding_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ic_padding_8</item>
        <item name="iconSize">@dimen/ic_size_24</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/frame_padding_16</item>
        <item name="android:paddingVertical">@dimen/frame_padding_20</item>
    </style>

    <style name="SettingsView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_height">@dimen/ic_size_24</item>
        <item name="android:layout_width">@dimen/ic_size_24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="ActivityText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="iconSize">@dimen/ic_size_24</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchHint" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="ArtistDurationTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="ArtistTrackViw">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/test_text_0_00</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="ChosenTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_18</item>
        <item name="android:layout_marginEnd">@dimen/padding_10dp</item>
    </style>


    <dimen name="text_size_14">14sp</dimen>
    <dimen name="padding_18">18dp</dimen>
</resources>